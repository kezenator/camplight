  sources(find("boost_1_59_0/libs/thread/src/win32/*.cpp"));
else
  sources({"boost_1_59_0/libs/thread/src/pthread/once.cpp",
           "boost_1_59_0/libs/thread/src/pthread/thread.cpp"});
end

sources(find_recursive("boost_1_59_0/libs/regex/src/*.cpp"));
