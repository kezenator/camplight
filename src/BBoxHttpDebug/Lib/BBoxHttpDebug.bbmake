
project("BBoxHttpDebug", "StaticLibrary");

reference("BBoxHttp");
reference("BBoxEnc");

tool_reference("ResourceBuilder");

if (platform() == "Win32") then
    tool_reference("BBoxHttpDebugWebsite");
end

include(".");

sources(find_recursive("*.cpp"), "bbox/http/debug/Resources.cpp");
headers(find_recursive("*.h"), "bbox/http/debug/Resources.h");

resources(
    "../Web/app.js",
    "../Web/app.css",
    "../Web/index.html");

custom_build(
    "ResourceBuilder",
    { "../Web/app.js", "../Web/app.css", "../Web/index.html"},
    { "bbox/http/debug/Resources.cpp", "bbox/http/debug/Resources.h" },
    { "bbox/http/debug/HttpDebugWebsite.cpp" },
    "-n \"bbox::http::debug\" -r \"../Web\" -a \"debug/\"");
